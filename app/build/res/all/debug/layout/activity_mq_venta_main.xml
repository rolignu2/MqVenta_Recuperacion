<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrmPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MqVentaMain" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="432dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbltitulo"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="26dp"
                android:text="@string/hello_world" />

            <ExpandableListView
                android:id="@+id/Menu_lista_expandible"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="0.42">
            </ExpandableListView>

            <Button
                android:id="@+id/cmd_recuperacion"
                android:layout_width="281dp"
                android:layout_height="match_parent"
                android:layout_marginTop="57dp"
                android:gravity="center"
                android:shadowColor="@color/rojo"
                android:shadowRadius="25"
                android:text="@string/registro_recuperacion"
                android:textColor="@color/blanco"
                android:background="@drawable/buttonew1" />

            <Button
                android:id="@+id/cmd_crear_recup_main"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/buttonew1"
                android:gravity="center"
                android:shadowColor="@color/rojo"
                android:shadowRadius="25"
                android:text="Perfiles"
                android:textColor="@color/blanco"
                style="@android:style/Animation" />

            <Button
                android:id="@+id/cmd_clientes"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/buttonew1"
                android:gravity="center"
                android:shadowColor="@color/rojo"
                android:shadowRadius="25"
                android:text="Clientes"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/cmd_productos"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/buttonew1"
                android:gravity="center"
                android:shadowColor="@color/rojo"
                android:shadowRadius="25"
                android:text="Productos"
                android:textColor="@color/blanco" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout><!-- From: file:/C:/Users/rolandoantonio/AndroidStudioProjects/MqVenta_Recuperacion/app/src/main/res/layout/activity_mq_venta_main.xml -->